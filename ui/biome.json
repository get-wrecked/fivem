{
    "$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
    "files": {
        "ignoreUnknown": true,
        "includes": ["src/**/*.{ts,js,tsx,jsx}"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "jsxQuoteStyle": "single",
            "bracketSameLine": false
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
